@page
@model SAMS.Areas.Identity.Pages.Activation.ActivateModel
@{
    ViewData["Title"] = "Activation Page";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating pb-2">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating pb-2">
                <input asp-for="Input.ActivationCode" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ActivationCode"></label>
                <span asp-validation-for="Input.ActivationCode" class="text-danger"></span>
            </div>
            <div class="form-floating pb-2">
                <input asp-for="Input.SchoolIssuedID" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.SchoolIssuedID"></label>
                <span asp-validation-for="Input.SchoolIssuedID" class="text-danger"></span>
            </div>
            <button id="activateSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Activate</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}