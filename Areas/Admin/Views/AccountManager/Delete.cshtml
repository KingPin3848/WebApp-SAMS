<h4>Account Manager</h4>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SchoolId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SchoolId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-10">
            @foreach (var role in Model.Role.ToList())
            {
                @Html.Raw(role)
                <br />
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActivationCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActivationCode)
        </dd>
    </dl>
    <br />
    <br />
    <div>
        @if (studentinfo != null)
        {
            <h3 class="text-danger">You are about to delete student's data as well. It includes:</h3>

            <br />
