@using SAMS.Models
@model SAMS.Controllers.ApplicationUser
@{
    ViewData["Title"] = "Delete";
    var studentinfo = ViewData["Student Info"] as string;
    var teacherinfo = ViewData["Teacher Info"] as string;
    var attmeminfo = ViewData["Attendance Office Member Info"] as string;
    var hsadmininfo = ViewData["HS School Admin Info"] as string;
    var synnlabadmininfo = ViewData["Synnovation Lab Admin Info"] as string;
    var eainfo = ViewData["EA Support Info"] as string;
    var nurseinfo = ViewData["Nurse Info"] as string;
    var lawenfinfo = ViewData["Law Enforcement Info"] as string;
    var scannermgmtinfo = ViewData["QR Code Scanner Management Info"] as string;
    var subteacherinfo = ViewData["Substitute Teacher Info"] as string;
    var districtadmininfo = ViewData["District Admin Info"] as string;
}
