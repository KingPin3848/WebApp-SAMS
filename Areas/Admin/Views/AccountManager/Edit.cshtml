@model SAMS.Controllers.ApplicationUser
@{
    ViewData["Title"] = "Edit Account";
}

<h1>Edit</h1>
<title>@ViewData["Title"]</title>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <h2>Edit an account.</h2>
            <hr />
            <div asp-validation-summary="All" class="text-danger pb-2"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-floating pb-2">
                <input asp-for="Email" class="form-control" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-floating pb-2">
                <input asp-for="SchoolId" class="form-control" />
                <label asp-for="SchoolId"></label>
                <span asp-validation-for="SchoolId" class="text-danger"></span>
            </div>

            <div class="form-floating">
                <input asp-for="ActivationCode" class="form-control" />
                <label asp-for="ActivationCode"></label>
                <span asp-validation-for="ActivationCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Role" class="form-label pt-2"></label>
                <div class="form-floating">
                    <select asp-for="Role" asp-items="(@ViewData["RoleId"] as SelectList)" class="form-select" multiple>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group pt-4">
                <input type="submit" value="Save" class="btn btn-primary" /> <a class="p-3" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>