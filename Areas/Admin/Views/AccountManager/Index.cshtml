@using static SAMS.Areas.Admin.Controllers.AccountManagerController;
@model IEnumerable<indexClass>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">New Account</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.schoolid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.activation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.schoolid)
                </td>
                <td>
                    @foreach (var role in item.role)
                    {
                        @Html.DisplayFor(modelItem => role)
                        <br />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.activation)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.dbid">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.dbid">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.dbid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>