@model SAMS.Controllers.ApplicationUser
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Account Manager</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SchoolId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SchoolId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-10">
            @foreach (var role in Model.Role.ToList())
            {
                @Html.Raw(role)
                <br />
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ActivationCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActivationCode)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>