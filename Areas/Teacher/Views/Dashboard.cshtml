
@{
    ViewData["Title"] = "Dashboard";
}

<h1>Dashboard</h1>


@for(int i = 0; i < ViewBag.Bells; i++)
{
    <div class="card" style="width: 10rem; border-radius:35px;">
        <a class="btn" asp-controller="Dashboard" asp-action="ClassAttendance" asp-route-id="@ViewBag.Bells[i]">
            <img src="/images/ScanQRCode.png" class="card-img-top" alt="Bell @ViewBag.Bells[i]" style="border-radius:35px;">
            <div class="card-body">
                @if(ViewBag.Bells[i] == "Aves")
                {
                    <h5 class="card-title">Attendance for Aves Bell</h5>
                } else
                {
                    <h5 class="card-title">Attendance for Bell @ViewBag.Bells[i]</h5>
                }
            </div>
        </a>
    </div>
}