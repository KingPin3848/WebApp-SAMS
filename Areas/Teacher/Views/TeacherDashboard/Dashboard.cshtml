@{
    ViewData["Title"] = "Dashboard";
}

<h1>Dashboard</h1>

<br />
<br />

<h3>Bells</h3>
<br />

<table class="table-borderless">
    <tr class="row">
            @for (int i = 0; i < ViewBag.Bells.Count; i++)
            {
            <td class="col">
                <div class="card" style="width: 12rem; border-radius:35px;">
                    <a class="btn" asp-controller="TeacherRoster" asp-action="Roster" asp-route-bell="@ViewBag.Bells[i]">
                        <img src="/images/ScanQRCode.png" class="card-img-top" alt="Bell @ViewBag.Bells[i]" style="border-radius:35px;">
                        <div class="card-body">
                            @if (ViewBag.Bells[i] == "Aves")
                            {
                                <h5 class="card-title">Aves Bell Attendance</h5>
                            }
                            else
                            {
                                <h5 class="card-title">Bell @ViewBag.Bells[i] Attendance</h5>
                            }
                        </div>
                    </a>
                </div>
                </td>
            }
    </tr>
</table>


<br />
