@model SAMS.Models.CustomScheduleModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CustomScheduleModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BellName" class="control-label"></label>
                <select asp-for="BellName" asp-items="ViewBag.BellNames" class="form-control"></select>
                <span asp-validation-for="BellName" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="StartTime" />
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

