        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CounselorFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CounselorMiddleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CounselorLastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CounselorPreferredName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CounselorEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CounselorPhone)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CounselorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CounselorId">Details</a> |
